<SplitPane dividerPositions="0.2" prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <items>
        <HipTreeView fx:id="hipOrgTreeView" prefHeight="768.0">
            <hipTreeCell>
                <HipTreeCell prefWidth="200" propertyName="orgName">
                </HipTreeCell>
            </hipTreeCell>
        </HipTreeView>
        <BorderPane >
            <center>
                <HipTableView fx:id="hipEmployeeTable" prefHeight="400.0" prefWidth="1121.0">
                    <columns>
                        <HipTableColumn editable="false" prefWidth="107.0" propertyName="staffCode" text="员工编号">
                            <tableCell>
                                <HipTableTextCell />
                            </tableCell>
                        </HipTableColumn>
                        <HipTableColumn editable="false" prefWidth="121.0" propertyName="name" text="员工名称">
                            <tableCell>
                                <HipTableTextCell />
                            </tableCell>
                        </HipTableColumn>
                        <HipTableColumn editable="false" prefWidth="70" propertyName="sex" text="性别">
                            <tableCell>
                                <HipEtsTableCell  dictCode="AdministrativeGender" />
                            </tableCell>
                        </HipTableColumn>
                        <HipTableColumn editable="false" prefWidth="176" propertyName="idNo" text="身份证">
                            <tableCell>
                                <HipTableTextCell />
                            </tableCell>
                        </HipTableColumn>
                        <HipTableColumn editable="false" prefWidth="176.0" propertyName="tel" text="手机">
                            <tableCell>
                                <HipTableTextCell />
                            </tableCell>
                        </HipTableColumn>
                        
                        <HipTableColumn editable="false" prefWidth="70" propertyName="statusCode" text="启用状态">
                           <tableCell>
                                        <HipCustomDataSourceTableCell >
                                            <customDataSourceCallback>
                                                <CustomStatusDataSourceCallback >
                                                    <dictElementList>
                                                        <ArrayList>
                                                            <DictElement elementCode='ACTIVE' elementName='有效' />
                                                            <DictElement elementCode='NULLIFIED' elementName='无效' />
                                                        </ArrayList>
                                                    </dictElementList>
                                                </CustomStatusDataSourceCallback>
                                            </customDataSourceCallback>
                                        </HipCustomDataSourceTableCell>
                                    </tableCell>
                        </HipTableColumn>
                        <HipTableColumn editable="false" prefWidth="45" text="操作">
                            <tableCell>
                                <HipTableButtonCell>
                                    <buttonList>
                                        <ArrayList>
                                            <HipButton onAction="#updateStaffall" text="" styleClass="edit-button">
                                                <graphic>
                                                    <ImageView pickOnBounds="true" preserveRatio="true" />
                                                </graphic>
                                            </HipButton>
<!--                                            <HipButton onAction="#updateStatus" text="启用/停用">
                                                
                                            </HipButton>-->
                                        </ArrayList>
                                    </buttonList>
                                </HipTableButtonCell>
                            </tableCell>
                        </HipTableColumn>
                    </columns>
                </HipTableView>
            </center>
            <top>
                <StackPane prefHeight="34.0" styleClass="control-bar-pane">
                    <HipButton onAction="#addEmployee" prefHeight="31.0" prefWidth="64.0" text="新增" styleClass="add-button">
                        <graphic>
                            <ImageView pickOnBounds="true" preserveRatio="true" />
                        </graphic>
                    </HipButton>
                </StackPane>
            </top>
        </BorderPane>
    </items>
</SplitPane>

